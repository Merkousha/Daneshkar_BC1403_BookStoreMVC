@{
    ViewData["Title"] = "صفحه اصلی مدیریت";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <div class="jumbotron">
        <h1 class="display-4">پنل مدیریت</h1>
        <p class="lead">به پنل مدیریت سیستم خوش آمدید.</p>
        <hr class="my-4">
        <p>از این قسمت می‌توانید تمام بخش‌های سیستم را مدیریت کنید.</p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">مدیریت دسته‌بندی‌ها</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">افزودن، ویرایش و حذف دسته‌بندی‌های سیستم</p>
                    <a href="#" class="btn btn-primary">ورود به بخش</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">مدیریت کاربران</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">مدیریت کاربران و سطوح دسترسی</p>
                    <a href="#" class="btn btn-primary">ورود به بخش</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">گزارش‌ها</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">مشاهده گزارش‌های سیستم</p>
                    <a href="#" class="btn btn-primary">ورود به بخش</a>
                </div>
            </div>
        </div>
    </div>
</div>